{
    "presets": [
        "@babel/preset-env",
        "@babel/preset-react"
    ],
    "plugins": [
        [
            "@babel/plugin-proposal-decorators",
            {
                "legacy": true
            }
        ],
        [
            "@babel/plugin-proposal-class-properties",
            {
                "loose": true
            }
        ],
        [
            "styled-jsx/babel",
            {
                "optimizeForSpeed": true
            }
        ],
        [
            "react-hot-loader/babel"
        ]
    ]
}